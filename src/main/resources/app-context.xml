<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

        <bean id="studentDAO" class="db.StudentDAO">
        </bean>

        <bean id="groupDAO" class="db.GroupDAO">
        </bean>

        <bean id="subjectDAO" class="db.SubjectDAO">
        </bean>

        <bean id="professorDAO" class="db.ProfessorDAO">
        </bean>

        <bean id="service" class="service.Service">
            <constructor-arg ref="studentDAO"/>
            <constructor-arg ref="groupDAO"/>
            <constructor-arg ref="subjectDAO"/>
            <constructor-arg ref="professorDAO"/>
        </bean>

</beans>